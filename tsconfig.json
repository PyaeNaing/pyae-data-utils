{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop" : true,
    "lib": ["es2015", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "target": "es5",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs",
    }
  }
}
